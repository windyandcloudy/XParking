<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_checked="true">
        <shape>
            <solid
                android:color="#F9A825"/>

            <stroke
                android:color="@android:color/holo_orange_light"
                android:width="1dp"/>
            <corners
                android:radius="5dp"/>
            <size
                android:width="15dp"
                android:height="15dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#FFFFFF"/>

            <stroke
                android:color="@android:color/holo_orange_light"
                android:width="1dp"/>
            <corners
                android:radius="5dp"/>
            <size
                android:width="15dp"
                android:height="15dp"/>
        </shape>
    </item>
</selector>